<p>
  <strong>Title:</strong>
  <%= post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= post.content %>
</p>

<p>
  <strong>Author:</strong>
  <%= post.author_id %>
</p>

<p>
  <strong>Likes count:</strong>
  <%= post.likes_count %>
</p>

<p>
  <strong>Comments count:</strong>
  <%= post.comments_count %>
</p>

<hr>
<p>
  Comments:
</p>

<% @comments.each do |c| %>
  <%= render c %>
  <div>
    <%= button_to "Destroy this comment", c, method: :delete %>
  </div>
<% end %>
