<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>

  <p>
    <strong>Likes count:</strong>
    <%= post.likes_count %>
  </p>

  <p>
    <strong>Comments count:</strong>
    <%= post.comments_count %>
  </p>

</div>
